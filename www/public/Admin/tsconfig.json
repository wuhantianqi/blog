//第二种写法，用include包含所有ts文件，同时可写不包含文件  
{
	"compilerOptions": {
		"module": "commonjs", //還有amd或system,指定支持的模块组织规范,選commonjs是爲了和node規範保持一致  
		"sourceMap": true //是否編譯一個.map 文件，用來在瀏覽器調試代碼
	},
	"include": [
		"./src/index.ts" //編譯具體的文件
	],
	"exclude": [ //不包括的文件  
		"node_module"
	]
}